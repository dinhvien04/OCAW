<script type="text/javascript">
    var isMobileOffset = 0
    if ($(window).width() < 541) {
        isMobileOffset = 200;
    }

    $(document).on('click', '.toc-items a[href^="#"]' , function(e){
        e.preventDefault();
        $('html,body').scrollTop($(this.hash).offset().top - 60 - isMobileOffset);
        var hash = $(this).attr('href');
        history.pushState(null, null, hash);
    });

    $(window).on('load', function() {
        var hash = window.location.hash;
        if (hash !== '') {
            $('.toc-items a').removeClass('active');
            $(`.toc-items a[href^="${hash}"]`).addClass('active');
        }else{
            $('.toc-items a[href^="#0"]').addClass('active');
        }
    });

    $(document).ready(function(){
        var $tocItems = $('.blog-content h2');
        var headlinePosition = [];
        var activeHeadline = 0;
        var html = ''
        $tocItems.each(function( index ) {
            $(this).attr('id', index);
            $(this).attr('class', 'title');
            headlinePosition[index] = {
                pos: $(this).offset().top,
                id: index
            };
            html += `<li><a href="#${index}" class="toc-item${index}">${$(this).text()}</a></li>`;
        });
        html = `<ul>${html}</ul>`;
        $('.toc-items').html(html);

        var timeout;
        $(window).scroll(function() {
            if (timeout) {
                clearTimeout(timeout);
            }
            timeout = setTimeout(function() {
                var $this = $(this);
                var top = $(window).scrollTop();
                var highlighted, closest = Number.MAX_VALUE
                var index = 0;
                $.each(headlinePosition, function( i, v ) {
                    if ($this.scrollTop() + 80 + isMobileOffset >= v.pos) {
                        activeHeadline = v.id;
                    }
                });

                $('.toc-items a').removeClass('active');
                $(`.toc-items .toc-item${activeHeadline}`).addClass('active');
            }, 50);
            
        });
    });
</script>
